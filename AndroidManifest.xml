<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kerloom.android.tmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/bullet"
        android:label="@string/app_name" >
        
        <activity
            android:label="@string/app_name"
            android:name=".main" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/app_name"
            android:name=".Setup" >
            <intent-filter >
                <action android:name="kerloom.android.tmanager.Setup" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
             
        <activity
            android:label="@string/app_name"
            android:name=".SetupEquipos" >
            <intent-filter >
                <action android:name="kerloom.android.tmanager.SETUPEQUIPOS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".Torneo" >
            <intent-filter >
                <action android:name="kerloom.android.tmanager.TORNEO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".temp" >
            <intent-filter >
                <action android:name="kerloom.android.tmanager.TEMP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".Ganador" >
            <intent-filter >
                <action android:name="kerloom.android.tmanager.GANADOR" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>      
            
    </application>

        
</manifest>